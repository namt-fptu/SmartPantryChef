                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/layoutIngredientsSection"
            android:layout_width="match_parent"
